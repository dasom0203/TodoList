<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.app.model.MemberMapper">

	<!-- 회원 추가 -->
	<insert id="insert">
		INSERT INTO MEMBER (MEMBER_ID, MEMBER_PASSWORD,MEMBER_NAME)
		VALUES(#{memberId},#{memberPassword},#{memberName})
	</insert>
	
	<!-- ID 중복검사 -->
	<select id="selectOne" resultType="member">
		SELECT MEMBER_ID FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
	</select>
	
	<!-- 로그인 (ID,PW) -->
	<select id="selectOneLogin">
		SELECT MEMBER_ID, MEMBER_PASSWORD FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
	</select>
	
	<!-- 회원 탈퇴 -->
	<delete id="delete">
		DELETE FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
	</delete>

</mapper>